{
  "name": "sifrr",
  "private": true,
  "workspaces": [
    "packages/*/*",
    "packages/*/*/test/public"
  ],
  "version": "0.0.9",
  "description": "a fullstack nodeJS/vanillaJS framework",
  "license": "MIT",
  "browserslist": [
    "chrome >= 55",
    "safari >= 10.1",
    "opera >= 42",
    "firefox >= 63"
  ],
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "dev": "turbo dev",
    "test:e2e": "turbo test:e2e",
