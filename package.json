{
  "name": "sifrr",
  "private": true,
  "workspaces": [
    "packages/*/*",
    "apps/*"
  ],
  "version": "0.0.0",
  "description": "a fullstack nodeJS/vanillaJS framework",
  "license": "MIT",
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "test:jest": "turbo test:jest",
    "test:storybook:ci": "turbo test:storybook:ci",
    "test:playwright": "turbo test:playwright",
    "docs": "typedoc",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "dev": "turbo dev",
    "test:e2e": "turbo test:e2e",
    "prepare": "husky",
    "format": "prettier --write .",
    "postinstall": "yarn playwright install --with-deps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sifrr/sifrr.git"
  },
  "keywords": [
    "sifrr",
    "nodejs",
    "backend",
    "frontend",
    "fullstack",
    "ui",
    "serviceworker",
    "sw",
    "browser storage",
    "fetch",
    "shadowdom",
    "custom elements",
    "router",
    "graphql",
    "ssr"
  ],
  "author": "aadityataparia <aadityataparia@gmail.com>",
  "bugs": {
    "url": "https://github.com/sifrr/sifrr/issues"
  },
  "homepage": "https://github.com/sifrr/sifrr",
  "packageManager": "yarn@1.22.22",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@sifrr/eslint-config": "*",
    "@sifrr/typescript-config": "*",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typedoc": "0.28.5",
    "typedoc-plugin-merge-modules": "7.0.0",
    "typedoc-plugin-missing-exports": "4.0.0"
  }
}
