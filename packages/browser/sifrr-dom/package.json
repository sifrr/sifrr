{
  "name": "@sifrr/dom",
  "version": "0.0.9",
  "description": "Sifrr's DOM library for creating user interfaces for websites.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sifrr/sifrr.git"
  },
  "author": "aadityataparia <aadityataparia@gmail.com>",
  "bugs": {
    "url": "https://github.com/sifrr/sifrr/issues"
  },
  "homepage": "https://github.com/sifrr/sifrr",
  "type": "module",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "browser": "dist/index.iife.js",
  "types": "dist/index.d.ts",
  "browserslist": [
    "chrome >= 55",
    "safari >= 10.1",
    "opera >= 42",
    "firefox >= 63"
  ],
  "keywords": [
    "sifrr",
    "dom",
    "custom elements",
    "shadow dom",
    "ui",
    "frontend"
  ],
  "scripts": {
    "lint": "eslint src/.",
    "lint:fix": "eslint --fix .",
    "test": "yarn test:jest && yarn test:playwright && yarn test:storybook:ci",
    "test:jest": "jest",
    "test:storybook": "test-storybook",
    "test:storybook:ci": "npx concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"yarn storybook:dev\" \"wait-on tcp:6006 && npm run test:storybook\"",
    "test:playwright": "playwright test",
    "build": "rm -rf dist && vite build",
    "dev": "vite build --watch",
    "test:server": "npx tsx test/server",
    "storybook:dev": "storybook dev -p 6006 --no-open",
    "storybook:build": "storybook build"
  },
  "dependencies": {
    "@sifrr/template": "*"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@sifrr/eslint-config": "*",
    "@sifrr/release-it-config": "*",
    "@sifrr/test-suite": "*",
    "@sifrr/typescript-config": "*",
    "@sifrr/vite-config": "*",
    "axios": "^0.21.1",
    "node-fetch": "^3.3.2",
    "typescript": "^5.8.3"
  },
  "files": [
    "bin",
    "dist",
    "src"
  ]
}
